<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pglogin_generalRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/animated_background">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">


        <ImageView
            android:id="@+id/logintemp_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/splash"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"/>

        <RelativeLayout
            android:id="@+id/login_relativelayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_below="@id/logintemp_logo"
            android:visibility="gone">
            <RelativeLayout
                android:id="@+id/relativelayout1"
                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:layout_height="35dp"
                android:background="@drawable/round_back"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon1person"
                    android:layout_width="30dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_login_username_24dp"/>


                <EditText
                    android:id="@+id/username1"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_height="wrap_content"
                    android:hint="Enter Username"
                    android:layout_toRightOf="@id/icon1person"
                    android:layout_marginTop="4dp"
                    android:maxLines="1"
                    android:background="@color/transparent"
                    android:textColorHint="@color/grey"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativelayout2"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="35dp"
                android:layout_below="@id/relativelayout1"
                android:background="@drawable/round_back"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon2_lock"
                    android:layout_width="30dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_password_24dp"/>

                <EditText
                    android:id="@+id/login_editTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:layout_marginTop="4dp"
                    android:hint="Enter Password"
                    android:layout_toRightOf="@id/icon2_lock"
                    android:layout_marginStart="8dp"
                    android:inputType="textPassword"
                    android:textColorHint="@color/grey"/>


            </RelativeLayout>
            <Button
                android:id="@+id/login1"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_button"
                android:text="Login"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/relativelayout2"
                android:fontFamily="monospace"
                android:textColor="@color/white"
                android:textAllCaps="false"/>


            <RelativeLayout
                android:id="@+id/sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/login1">
                <TextView
                    android:id="@+id/admintextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/accquestion"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/lightsky_blue"
                    android:layout_marginLeft="10dp"/>
                <View
                    android:layout_below="@id/admintextview"
                    android:layout_width="45dp"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentRight="true"
                    android:background="@color/lightsky_blue"/>
                <TextView
                    android:id="@+id/textview_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:textColor="@color/lightsky_blue" />

                <View
                    android:layout_below="@id/textview_signup"
                    android:layout_width="46dp"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/lightsky_blue" />

            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>