<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.personal.its_soa.personal2.view_fin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="These Are Your Financial Records"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="22sp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:stretchColumns="2">

        <TableRow>

            <TextView
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="Item Bought"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"/>


            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="Price"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="Date "
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"/>

        </TableRow>

        <TableRow
            android:layout_marginTop="10dp">

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/grey"
                android:textSize="14sp"/>

            <EditText
                android:layout_marginTop="10dp"
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:textColor="@color/grey"
                android:textSize="14sp"/>

            <EditText
                android:layout_marginTop="10dp"
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:textColor="@color/grey"
                android:textSize="14sp"/>

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Would You Like To Add More Records  ?"
        android:layout_gravity="center"
        android:textSize="17sp"/>

    <Button
        android:id="@+id/fin_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click Here"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:fontFamily="monospace"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/hom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="HOME PAGE"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:fontFamily="monospace"/>





</LinearLayout>


</ScrollView>